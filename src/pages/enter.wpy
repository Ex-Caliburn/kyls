    <view class="content">
      <form report-submit="ture" @submit="getFormId">
        <button class="weui-btn mini-btn enter-btn type_blue" @tap="jump('0')" formType="submit">本科生入口</button>
        <button class="weui-btn mini-btn enter-btn type_blue" @tap="jump('1')" formType="submit">研究生入口</button>
        <button class="weui-btn mini-btn enter-btn type_blue" @tap="jump('2')" formType="submit">考研里手故事</button>
        <button class="weui-btn mini-btn enter-btn type_blue" @tap="jump('3')" formType="submit">使用帮助</button>
