<style scope>
  .title{
    font-size: 40rpx
  }
  .page{
    padding-top: 100rpx;
  }
  .btn{
    display:block;
    margin-left:auto;
    margin-right:auto;
    padding-left:14px;
    padding-right:14px;
    box-sizing:border-box;
    border: none;
