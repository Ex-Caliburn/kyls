    overflow:hidden;
    color:#fff;
  }

  .enter-btn{
    margin-bottom: 35rpx;
    height: 94rpx;
    width: 500rpx;
    line-height: 94rpx;
    font-size: 36rpx;
    border-radius: 50rpx;
    box-shadow: 0px 10px 10px 0px rgba(0, 0, 0, 0.14), 0px 4px 2px 0px rgba(0, 0, 0, 0.04);
  }
  .operation{
    position: absolute;
    bottom: 150rpx;
