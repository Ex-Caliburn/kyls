<template>
  <view class="container">
    <swiper class="swiper_container" vertical="true" autoplay="true" circular="true" interval="2000">
      <block wx:for="{{msgList}}" wx:key="index">
        <swiper-item>
          <view class="swiper_item">{{item.title}}</view>
        </swiper-item>
      </block>
    </swiper>
    <view class="content" >
      <form report-submit="ture" @submit="getFormId">
        <button class="weui-btn mini-btn enter-btn " @tap="jump('4')"  disabled formType="submit">考研四大选择题与考研规划问题</button>
        <button class="weui-btn mini-btn enter-btn " @tap="jump('1')"  disabled formType="submit">十三大类学科咨询</button>
        <button class="weui-btn mini-btn enter-btn " @tap="jump('5')"  disabled formType="submit">院校及专业咨询</button>
        <picker class="enter-btn " @change="jump('2')" value="{{publicIndex}}" range="{{publicTypes}}" range-key="science_name">
          <button class="weui-btn mini-btn enter-btn type_pink"  formType="submit">公共科目及联考综合类</button>
        </picker>
        <button class="weui-btn mini-btn enter-btn" @tap="jump('6')"  disabled formType="submit">专业科目类</button>
        <button class="weui-btn mini-btn enter-btn" @tap="jump('3')"  disabled formType="submit">复试科目类问题咨询</button>
      </form>
    </view>
    <view class="fz24">
      温馨信息：具体答复内容可在“我－我的提问”中查看。
    </view>
  </view>
  <tabbar :tabbar.sync='tabbar'></tabbar>
</template>

<script>
  import wepy from 'wepy'
  import toast from 'mixins/toast'
  import { get } from 'utils/service'
  import Tabbar from 'components/tabbar'
  import tabbar from 'mixins/tabbar'
  import navigate from 'mixins/navigate'
  import shareApp from 'mixins/shareApp'

  export default class chooseInterest extends wepy.page {
    config = {
      navigationBarTitleText: '选择兴趣'
    }
    components = {
      tabbar: Tabbar
    }

    mixins = [tabbar, toast, navigate, shareApp]
    data = {
      msgList: [
        {url: 'url', title: '李明喜 关于“考研”悬赏金额为100元的问题已被有效解决'},
        {url: 'url', title: '代峻峰 关于“励志”悬赏金额为50元的问题已被有效解决'},
        {url: 'url', title: '大法官 关于“方向”悬赏金额为60元的问题已被有效解决'}],
      publicTypes: [],
      publicIndex: ''
    }

    methods = {
      jump(i) {
        console.log(i)
        if (this.publicTypes.length > 0) {
          let id = this.publicTypes[i].id
          this.navigate('graduateList?id=' + id + '&science_type=' + i)
        } else {
          this.getScienceInfoByType()
        }
      }
    }

    getScienceInfoByType () {
      // 1:13大学科 2：公共科目类 3：复试科目类问题咨询 4：考研四大选择题与考研规划问题 5 院校及专业咨询
      get({
        apiName: 'getScienceInfoByType',
        data: {
          science_type: 2
        }
      }).then(res => {
        this.publicTypes = res.data
        this.$apply()
      }).catch(res => {
      })
    }
    onShow () {
      // this.getScienceInfoByType()
    }
    onLoad () {
      let userType = this.$parent.globalData.userInfo.userType
      if (userType === 0) {
        this.navigate('enter', 1)
      } else {
        this.getScienceInfoByType()
      }
    }
  }
</script>
