<script>
  import wepy from 'wepy'
  import toast from 'mixins/toast'
  import { get } from '../utils/service'
  import Tabbar from '@/components/tabbar' // alias example
  import tabbar from 'mixins/tabbar'

  export default class chooseInterest extends wepy.page {
    config = {
      navigationBarTitleText: '选择兴趣'
    }
    components = {
      tabbar: Tabbar

    }

    mixins = [tabbar, toast]
    data = {
      msgList: [
        {url: 'url', title: '李明喜（用户）关于“考研”悬赏金额为100元的问题已被有效解决'},
        {url: 'url', title: '代峻峰（用户）关于“励志”悬赏金额为50元的问题已被有效解决'},
        {url: 'url', title: '大法官（用户）关于“方向”悬赏金额为60元的问题已被有效解决'}],
      publicTypes: [],
      publicIndex: ''
    }

    methods = {
      bindPublicChange(e) {
        console.log(e.detail.value)
        if (this.publicTypes.length > 0) {
          let id = this.publicTypes[e.detail.value].id
          wepy.navigateTo({
            url: '/pages/graduateList?id=' + id
          }).then((res) => {
            console.log(res)
          }).catch(err => {
            console.log(err)
          })
        }
      },
      jump (index) {
        const route = [
          '/pages/graduateRegister',
          '/pages/undergraduateRegister',
          '/pages/materials/story',
          '/pages/searchList'
        ]
        wepy.navigateTo({
          url: route[index]
        }).then((res) => {
          console.log(res)
        }).catch(err => {
          console.log(err)
        })
      }
    }

    async getScienceInfoByType () {
      let res = await get({
        apiName: 'getScienceInfoByType',
        data: {
          science_type: 1
        }
      })
      if (res.data) {
        this.publicTypes = res.data
        this.$apply()
      }
      console.log(res.data)
    }
    onShow () {
      // this.getScienceInfoByType()
    }

    // pullDownRefresh () {
    //   this.getScienceInfoByType()
    // }
    onLoad () {
      this.getScienceInfoByType()
    }
  }
</script>
