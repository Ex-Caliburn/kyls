      <button class="weui-btn mini-btn enter-btn " @tap="jump('0')"  disabled >考研四大选择题与考研规划问题</button>
      <button class="weui-btn mini-btn enter-btn " @tap="jump('1')"  disabled >十三大类学科咨询</button>
      <button class="weui-btn mini-btn enter-btn " @tap="jump('2')"  disabled >院校及专业咨询</button>
